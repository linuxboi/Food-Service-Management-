<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml/1" 
            xmlns="http://javafx.com/javafx/13"
            fx:controller="com.mycompany.mavenproject2.controllers.CustomerDashboardController">
    
    <top>
        <VBox spacing="0">
            <!-- Top Bar -->
            <HBox spacing="10" style="-fx-background-color: #2196F3; -fx-padding: 15;">
                <children>
                    <Label fx:id="welcomeLabel" text="Welcome!" 
                           style="-fx-text-fill: white; -fx-font-size: 18;"/>
                    <Region HBox.hgrow="ALWAYS"/>
                    <Button text="My Orders" onAction="#showMyOrders"/>
                    <Button text="Logout" onAction="#handleLogout"/>
                </children>
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10"/>
                </padding>
            </HBox>
            
            <!-- Category Bar -->
            <ScrollPane fitToWidth="true">
                <content>
                    <FlowPane fx:id="categoryPane" hgap="10" vgap="10">
                        <padding>
                            <Insets top="10" right="10" bottom="10" left="10"/>
                        </padding>
                    </FlowPane>
                </content>
            </ScrollPane>
        </VBox>
    </top>
    
    <center>
        <ScrollPane fx:id="menuScrollPane" fitToWidth="true">
            <content>
                <GridPane fx:id="menuGrid" hgap="20" vgap="20">
                    <padding>
                        <Insets top="20" right="20" bottom="20" left="20"/>
                    </padding>
                </GridPane>
            </content>
        </ScrollPane>
    </center>
    
    <right>
    <VBox spacing="10">
        <children>
            <Label text="Your Cart" style="-fx-font-size: 18; -fx-font-weight: bold;"/>
            <ListView fx:id="cartList" VBox.vgrow="ALWAYS"/>
            <HBox spacing="10" alignment="CENTER_RIGHT">
                <Label text="Total: $"/>
                <Label fx:id="totalLabel" text="0.00" style="-fx-font-size: 16; -fx-font-weight: bold;"/>
            </HBox>
            <Button fx:id="placeOrderButton" text="Place Order" 
                    onAction="#placeOrder" 
                    maxWidth="Infinity"
                    style="-fx-background-color: #28a745; -fx-text-fill: white;"/>
        </children>
        <padding>
            <Insets top="10" right="10" bottom="10" left="10"/>
        </padding>
    </VBox>
</right>
    
    <padding>
        <Insets top="10" right="10" bottom="10" left="10"/>
    </padding>
    
</BorderPane>