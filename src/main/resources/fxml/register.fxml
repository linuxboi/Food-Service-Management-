<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.*?>
<?import javafx.scene.control.*?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.text.Text?>


<VBox spacing="20" alignment="CENTER" prefWidth="400" prefHeight="500"
      xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/13"
      fx:controller="com.mycompany.mavenproject2.controllers.RegisterController"
      styleClass="register-container">
    
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Text text="Create New Account" styleClass="title-text"/>
    
    <VBox spacing="10" styleClass="register-form">
        <TextField fx:id="usernameField" promptText="Username"/>
        <PasswordField fx:id="passwordField" promptText="Password"/>
        <TextField fx:id="fullNameField" promptText="Full Name"/>
        <TextField fx:id="phoneField" promptText="Phone Number"/>
        <TextArea fx:id="addressField" promptText="Address" prefRowCount="3"/>
        
        <Button text="Register" onAction="#handleRegister"/>
        <Button text="Back to Login" onAction="#handleBackToLogin"/>
        
        <Label fx:id="errorLabel" styleClass="error-label"/>
    </VBox>
</VBox>